<LinearLayout android:id="@+id/reverse"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:keepScreenOn="true"
        android:layout_marginLeft="30dp"
        android:text="rzeczownik"
        android:textColor="@android:color/darker_gray"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:textStyle="italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:keepScreenOn="true"
        android:layout_marginLeft="30dp"
        android:text=" - magistrant"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:keepScreenOn="true"
        android:layout_marginLeft="30dp"
        android:text=" - absolwent uniwersytetu"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:keepScreenOn="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="czasownik"
        android:textColor="@android:color/darker_gray"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:textStyle="italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:keepScreenOn="true"
        android:layout_marginLeft="30dp"
        android:text=" - otrzymywać dyplom"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:keepScreenOn="true"
        android:layout_marginLeft="30dp"
        android:text=" - kończyć uniwersytet"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        />


</LinearLayout>
